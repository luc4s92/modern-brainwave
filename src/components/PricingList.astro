---
import { pricing, check } from "@/constants/imgs";
import Button from "@/components/Button";
---

<div class="flex gap-[1rem] max-lg:flex-wrap">
  {
    pricing.map((item) => (
      <div
        id={item.id}
        class="w-[19rem] max-lg:w-full h-full px-6 bg-n-8 border border-n-6 rounded-[2rem] lg:w-auto even:py-14 odd:py-8 odd:my-4 [&>h4]:first:text-color-2 [&>h4]:even:text-color-1 [&>h4]:last:text-color-3"
      >
        <h4 class="h4 mb-4">{item.title}</h4>
        <p class="body-2 min-h-[4rem] mb-3  text-n-1/50">{item.description}</p>
        <div class="flex items-center h-[5.5rem] mb-6 ">
          {item.price && (
            
              <div class="h3">$</div>
              <div class="text-[5.5rem] leading-none font-bold">
                {item.price}
              </div>
         
          )}
        </div>
        <Button
          className="w-full mb-6 items-center flex justify-center "
          href={item.price ? "/pricing" : "mailto:contact@info.com"}
          white={!!item.price}
        >
          {item.price ? "Get started" : "Contact us"}
        </Button>
        <ul>
          {item.features.map((feature, index) => (
            <li class="flex items-start py-5 border-t border-n-6">
              <img src={check} alt="check" width={24} height={24} />
              <p class="body-2 ml-4">{feature}</p>
            </li>
          ))}
        </ul>
      </div>
    ))
  }
</div>
