---
import Tagline from "@/components/Tagline.astro";

const { className, title, text, tag } = Astro.props;
---

<div
  class={`${className} max-w-[50rem] mx-auto mb-12 lg:mb-20 md:text-center `}
>
  {tag && <Tagline className="mb-4 md:justify-center">{tag}</Tagline>}
  {title && <h2 class="h2">{title}</h2>}
  {text && <p class="body-2 mt-4 text-n-4">{text}</p>}
</div>
