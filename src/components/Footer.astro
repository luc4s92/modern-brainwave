---
import Section from "@/components/Section.astro";
import { socials } from "@/constants/imgs";
---

<Section crosses class="!px-0 !py-10 xl:!py-2">
    <footer class="container flex sm:justify-between justify-center items-center gap-10 max-sm:flex-col">
      <p class="caption text-n-4 lg:block">
        Â© {new Date().getFullYear()}. All rights reserved.
      </p>

      <ul class="flex gap-5 flex-wrap">
        {socials.map((item) => (
          <a
            
            href={item.url}
            target="_blank"
            class="flex items-center justify-center w-10 h-10 bg-n-7 rounded-full transition-colors hover:bg-n-6"
          >
            <img src={item.iconUrl} width={16} height={16} alt={item.title} />
          </a>
        ))}
      </ul>
    </footer>
  </Section>